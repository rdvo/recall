{
  "name": "recall",
  "version": "0.2.0",
  "description": "Universal Memory Layer for AI Agent Harnesses",
  "type": "module",
  "main": "dist/v2/index.js",
  "bin": {
    "recall": "./dist/v2/cli.js",
    "recall-v1": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/v2/cli.ts",
    "start": "node dist/v2/cli.js",
    "recall": "tsx src/v2/cli.ts",
    "typecheck": "tsc --noEmit",
    "seed": "tsx src/cli/index.ts seed",
    "test": "tsx src/cli/index.ts test",
    "test:needle": "tsx src/cli/index.ts test:needle",
    "test:heavy": "tsx src/cli/index.ts test:heavy",
    "test:all": "npm run test:needle && npm run test:heavy",
    "show-logs": "tsx src/cli/index.ts show-logs"
  },
  "keywords": [
    "search",
    "semantic",
    "llm",
    "sqlite",
    "fts5"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cerebras/cerebras_cloud_sdk": "^1.23.0",
    "@hono/node-server": "^1.8.2",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^5.0.0",
    "dotenv": "^16.3.1",
    "hono": "^4.0.0",
    "pdf-parse": "^1.1.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/pdf-parse": "^1.1.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
